<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="actionBarStyle">@style/MyActionBarTheme</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="MyActionBarTheme" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="DialogActivityTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="ll_text_input_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="et_text_input_box">
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="HintTextAppearence" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>
